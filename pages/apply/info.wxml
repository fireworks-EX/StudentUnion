<view class="container">
<van-panel title="审批列表"  status="详情" use-footer-slot>
  <!-- <van-divider contentPosition="center">活动</van-divider> -->
  <van-cell-group>
    <van-cell>
      <view class="item">
        <text class="text" wx:if="{{result.flag == 0}}">审批id：{{result.applydepid}}\n申请部门：{{depName}}\n申请理由：{{result.reason}}\n审批状态：待审核</text>
        <text class="text" wx:if="{{result.flag == 1}}">审批id：{{result.applydepid}}\n申请部门：{{depName}}\n申请理由：{{result.reason}}\n审批状态：未通过</text>
      </view>
    </van-cell>
  </van-cell-group>
</van-panel>
</view>