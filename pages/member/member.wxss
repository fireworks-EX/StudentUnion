.container{
  margin-bottom: 50px;
}
.item{
  width: 100%;
  height: 70px;
  display: flex;
  align-items: center;
}
.pic{
  margin: 10px 10px;
  width: 50px;
  height: 50px;
  border-radius: 10px;
  background-color: #eeeeee;
}
.text {
  font-size: 30rpx;
}
.icon{
  margin-right: 10px;
}
.left {
  display: inline-block;
  width: 65px;
  height: 70px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: rgb(143, 255, 68);
}
.right {
  display: inline-block;
  width: 65px;
  height: 70px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: rgb(255, 68, 68);
}
.rightbtn{
  margin-top: 15px;
  float: right;
}
