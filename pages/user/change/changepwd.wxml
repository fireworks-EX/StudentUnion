<view class="container">


  <form bindsubmit="formSubmit" bindreset="formReset">

    <van-cell-group>
      <!-- <van-field
        value="{{ uid }}"
        clearable
        required
        label="学号"
        placeholder="请输入学号"
        bind:change="onChangeid"
      /> -->
      <van-field
        value="{{ pwd1 }}"
        type="password"
        clearable
        required
        label="旧密码"
        placeholder="请输入旧密码"
        bind:change="onChangepwd1"
      />
      <van-field
        value="{{ pwd2 }}"
        type="password"
        clearable
        required
        label="新密码"
        placeholder="请输入新密码"
        bind:change="onChangepwd2"
      />
    </van-cell-group>

    <van-button class="btn" bind:click="submit" type="primary" size="large" color="linear-gradient(to right, #6495ED, #00BFFF)">提交</van-button>
    <van-button class="btn" bind:click="reset" type="primary" size="large" color="linear-gradient(to right, #98FB98, #40E0D0)">重置</van-button>

  </form>


</view>
