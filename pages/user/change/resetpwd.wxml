<view class="container">


  <form bindsubmit="formSubmit" bindreset="formReset">

    <van-cell-group>
      <van-field
        value="{{ uid }}"
        clearable
        required
        label="学号"
        placeholder="请输入学号"
        bind:change="onChangeid"
      />
    </van-cell-group>

    <van-button class="btn" bind:click="submit" type="primary" size="large" color="linear-gradient(to right, #6495ED, #00BFFF)">重置</van-button>

  </form>


</view>
